
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{asset("css/main.css")}}">{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

<main class="container mt-5 ms-10   mx-auto"  style="width: 500px">
    {% block body %}
        <h1>Rechercher un Livre</h1>
        <form action="" method="POST">
            Titre de Livre : <input type="text" name="input_recherche"/>
            <input type="submit" name="rechercher" value="Rechercher"  class="btn btn-info"/>
        </form>
        {% if books is empty %}
            aucun Livre trouvé
        {% else %}
            <table class="table table-secondary  mt-3"  border="1">
                <tr>
                    <th>Numéro</th>
                    <th>Titre du Livre</th>
                </tr>
                {% for book in books %}
                    <tr>
                        <td>{{ book.id }}</td>
                        <td>{{ book.title}}</td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}
    {% endblock %}
</main>
</body>
</html>
